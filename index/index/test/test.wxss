.tim {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 1;
}

 .tim_shaft_bfx {
    height: 40px;
    width: 2px;
    background: rgba(45, 214, 53, 0.678);
    position: absolute;
    z-index: 2;
}

.time-select {
    background: #E7E7E7;
    border-radius: 5rpx;
    z-index: 3;
    padding: 10rpx;
}

.tim_shaft {
    width: 100%;
    height: 50px;
    white-space: nowrap;
    background: #ffffff;
    position: relative;
}

.tim_shaft .tim_shaft_box {
    display: inline-block;
    position: relative;
}

.tim_shaft .tim_shaft_box {
    position: absolute;
    
}



.tim_shaft .tim_shaft_box .videos {
    position: absolute;
    top: 10px;
    background: #fff;
    height: 20px;
}

.tim_shaft .tim_shaft_kd {
    height: 20px;
    border-left: 2px solid #000;
    display: inline-block;
    margin-top: 10px;
    margin-left: 15px;
    position: relative;
}

.tim_shaft .tim_shaft_one {
    margin-left: 0;
}

